{
  "family_root": "system_dashboard",
  "parent": "system",
  "domain": "system_dashboard",
  "description": "Dashboard shortcuts - favorites, recents, issues",
  "nodes": {
    "system_dashboard": {
      "type": "Menu",
      "prompt": "Dashboard",
      "description": "Quick access to favorites, recents, and issues",
      "options": {
        "1": "favorite_skills",
        "2": "favorite_personas",
        "3": "recently_made",
        "4": "recently_equipped",
        "5": "create_issue",
        "6": "review_issues"
      }
    },
    "favorite_skills": {
      "type": "Menu",
      "prompt": "Favorite Skills",
      "description": "Your favorite skills by category",
      "options": {
        "1": "fav_skills_list",
        "2": "fav_skills_add",
        "3": "fav_skills_remove"
      }
    },
    "fav_skills_list": {
      "type": "Callable",
      "prompt": "List Favorite Skills",
      "description": "Show all favorite skills grouped by category",
      "function_name": "_dashboard_fav_skills_list",
      "args_schema": {}
    },
    "fav_skills_add": {
      "type": "Callable",
      "prompt": "Add Favorite Skill",
      "description": "Add a skill to favorites",
      "function_name": "_dashboard_fav_skills_add",
      "args_schema": {"skill_name": "str", "category": "str"}
    },
    "fav_skills_remove": {
      "type": "Callable",
      "prompt": "Remove Favorite Skill",
      "description": "Remove a skill from favorites",
      "function_name": "_dashboard_fav_skills_remove",
      "args_schema": {"skill_name": "str"}
    },
    "favorite_personas": {
      "type": "Menu",
      "prompt": "Favorite Personas",
      "description": "Your favorite personas",
      "options": {
        "1": "fav_personas_list",
        "2": "fav_personas_add",
        "3": "fav_personas_remove"
      }
    },
    "fav_personas_list": {
      "type": "Callable",
      "prompt": "List Favorite Personas",
      "description": "Show all favorite personas",
      "function_name": "_dashboard_fav_personas_list",
      "args_schema": {}
    },
    "fav_personas_add": {
      "type": "Callable",
      "prompt": "Add Favorite Persona",
      "description": "Add a persona to favorites",
      "function_name": "_dashboard_fav_personas_add",
      "args_schema": {"persona_name": "str"}
    },
    "fav_personas_remove": {
      "type": "Callable",
      "prompt": "Remove Favorite Persona",
      "description": "Remove a persona from favorites",
      "function_name": "_dashboard_fav_personas_remove",
      "args_schema": {"persona_name": "str"}
    },
    "recently_made": {
      "type": "Callable",
      "prompt": "Recently Made",
      "description": "Show recently created skills",
      "function_name": "_dashboard_recently_made",
      "args_schema": {"limit": "int"}
    },
    "recently_equipped": {
      "type": "Callable",
      "prompt": "Recently Equipped",
      "description": "Show recently equipped skills/personas",
      "function_name": "_dashboard_recently_equipped",
      "args_schema": {"limit": "int"}
    },
    "create_issue": {
      "type": "Callable",
      "prompt": "Create Issue",
      "description": "Create a new issue/note",
      "function_name": "_dashboard_create_issue",
      "args_schema": {"title": "str", "body": "str", "tags": "str"}
    },
    "review_issues": {
      "type": "Callable",
      "prompt": "Review Issues",
      "description": "List all issues and view details",
      "function_name": "_dashboard_review_issues",
      "args_schema": {"issue_id": "str"}
    }
  }
}
